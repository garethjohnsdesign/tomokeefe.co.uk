{% set bodyClass = 'category' %}
{% set projects = craft.entries
.relatedTo(category)
.order('postDate desc')
.all() %}

{% extends "_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}

{% block main %}

<!-- Projects -->
{% set projectCount = projects|length %}
<div class="grid-x grid-padding-x grid-padding-y {% if projectCount > 2 %}align-left{% else %}align-center{% endif %}">
  {% for project in projects %}
    <div class="small-12 medium-6 {% if projectCount > 2 %}xlarge-4{% else %}xlarge-6{% endif %} cell text-center">
      <a href="{{ project.url }}">
        {% set image = project.image.one() %}
        <div class="margin-bottom-1 image--24-1" data-interchange="{% include "_includes/images/contained/16-9/interchange-img-small-12-medium-4" %}"></div>
        <div class="sans-regular text-center"><span class="project__title sans-bold text-uppercase">{{ project.title }}</span>{% if project.client %}<span class="dark-gray project__client padding-left-1">{{ project.client }}</span>{% endif %}</div>
      </a>
    </div>
  {% endfor %}
</div>
<!-- End Projects -->
{% endblock %}


{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}